#version 450

layout(vertices = 6) out;

uniform float nbtess;

void main() {

    if (gl_InvocationID == 0) {
        gl_TessLevelOuter[0] = nbtess;
        gl_TessLevelOuter[1] = nbtess;
        gl_TessLevelOuter[2] = nbtess;
        gl_TessLevelOuter[3] = nbtess;

        gl_TessLevelInner[0] = nbtess / 2.0;
        gl_TessLevelInner[1] = nbtess / 2.0;
    }
    

    gl_out[gl_InvocationID].gl_Position = gl_in[gl_InvocationID].gl_Position;
}